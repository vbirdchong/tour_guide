<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/id_tour_info_image"
        android:layout_width="@dimen/item_image_width"
        android:layout_height="@dimen/item_image_height"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_text_height"
        android:orientation="vertical"
        android:background="@color/list_item_background">

        <TextView
            android:id="@+id/id_tour_info_text"
            style="@style/ItemTextInfoStyle"/>

        <TextView
            android:id="@+id/id_tour_addition_info_text"
            style="@style/ItemTextAddInfoStyle"/>
    </LinearLayout>
</LinearLayout>
